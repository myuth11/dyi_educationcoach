    "diy",
    "student",
    "coaching",
    "accessibility",
    "responsive",
    "web-development"
  ],
  "author": "Republic Polytechnic",
  "license": "Educational",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/republic-polytechnic/diy-education-coach.git"
  },
  "bugs": {
    "url": "https://github.com/republic-polytechnic/diy-education-coach/issues"
  },
  "homepage": "https://github.com/republic-polytechnic/diy-education-coach#readme",
  "devDependencies": {
    "live-server": "^1.2.2",
    "html-validate": "^8.0.0",
    "stylelint": "^15.10.0",
    "eslint": "^8.45.0",
    "prettier": "^3.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
